<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="@color/listview_color_3"
				android:endColor="@color/listview_color_1" android:angle="90" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:startColor="@color/listview_color_3"
				android:endColor="@color/listview_color_2" android:angle="90" />
		</shape>
	</item>
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="@color/listview_color_3"
                android:endColor="@color/listview_color_2" android:angle="90" />
        </shape>
    </item>
	<item>
		<shape>
			<solid android:color="@color/background_1"></solid>
		</shape>
	</item>
</selector>
