    <style name="AboutLinks">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:linksClickable">true</item>
        
        <item name="android:layout_marginLeft">@dimen/bodyPaddingMedium</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">@dimen/paddingMedium</item>
        <item name="android:paddingRight">@dimen/paddingMedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="ListItemSummary">
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="ListItemDistance">
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:gravity">right</item>
    </style>

</resources>